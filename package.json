{
  "name": "frontend-project-template",
  "version": "0.0.1",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      [
        "scssify"
      ]
    ]
  },
  "scripts": {
    "lint": "standard --fix scripts/*.js | snazzy",
    "start": "watchify ./scripts/app.js -o ./scripts/bundle.js & live-server .",
    "build": "node build.js",
    "prod": "live-server dist/",
    "test": "mocha",
    "deploy": "npm run lint && npm run build && surge -p ./dist -d \"$(< CNAME)\""
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "chai": "^4.1.2",
    "fs-extra": "^4.0.2",
    "live-server": "^1.2.0",
    "mocha": "^4.0.0",
    "scssify": "^2.3.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "surge": "^0.19.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "firebase": "^4.5.0",
    "firebaseui": "^2.3.0"
  }
}
